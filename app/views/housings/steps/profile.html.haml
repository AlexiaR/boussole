.col-md-6.col-md-offset-3
  %legend Mon profil

  = simple_form_for(@housing, url: wizard_path, method: :put, wrapper: :vertical_form) do |f|
    = f.error_notification

    .form-inputs
      = f.input :status, label: 'Situation',
                         include_blank: false,
                         prompt: 'Sélectionne une option',
                         collection: Project::STATUS,
                         label_method: :to_s,
                         value_method: :to_s,
                         as: :select

      = f.input :residence_city, label: 'Lieu de résidence actuel',
                                 collection: Project::CITIES,
                                 include_blank: false,
                                 input_html: { rel: 'autocomplete' }

      = f.input :age, label: 'Âge'

    .form-actions
      = f.button :submit, 'Continuer'

-# coding: utf-8

.l-container-wide
  .l-content
    %section.text-center
      %h1 Boussole

      %h3
        Accède au conseil garanti d'un·e professionnel·le pour t'aider

        - if feature?(:training)
          dans tes projets de formation

        - if feature?(:housing)
          à trouver une solution pour te loger

        - if feature?(:working)
          à trouver un emploi

        - if feature?(:healthcaring)
          à trouver une solution pour te soigner

    %section.callout
      - if feature?(:working)
        = link_to('Commencer !', workings_path, method: :post, class: 'btn btn-new btn-lg')

      - if feature?(:training)
        .col-md-2
          = link_to(projects_path, method: :post) do
            .thumbnail
              = image_tag('education.png')
              .caption
                %h5 Me former

      - if feature?(:housing)
        - if feature?(:working) || feature?(:training) || feature?(:traveling) || feature?(:healthcaring)
          .col-md-2
            .thumbnail
              = link_to(housings_path, method: :post) do
                = image_tag('housing.png')
                .caption
                  %h5 Me loger

        - else
          = link_to('Commencer !', housings_path, method: :post, class: 'btn btn-new btn-lg')


      - if feature?(:traveling)
        .col-md-2
          .thumbnail
            = image_tag('travel.png')
            .caption
              %h5 Partir à l'étranger

      - if feature?(:healthcaring)
        .col-md-2
          .thumbnail
            = image_tag('health.png')
            .caption
              %h5 Me soigner

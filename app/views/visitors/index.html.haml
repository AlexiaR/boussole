-# coding: utf-8

- content_for(:twitter_card) { render('prouns/twitter_card') }

.l-container-wide
  .l-content
    %section.text-center
      %h1= t('layouts.application.title')

      %h2
        - if feature?(:training)
          = t('views.landing.description', scenario: 'trouver une formation')
          trouver une formation

        - if feature?(:housing)
          = t('views.landing.description', scenario: 'trouver un logement')

        - if feature?(:working)
          = t('views.landing.description', scenario: 'trouver un emploi')

        - if feature?(:healthcaring)
          = t('views.landing.description', scenario: 'prendre soin de ta sant√©')

    %section.callout
      - if feature?(:working)
        = link_to(t('views.landing.callout'), workings_path, method: :post, class: 'btn btn-new')

      - if feature?(:training)
        = link_to(t('views.landing.callout'), trainings_path, method: :post, class: 'btn btn-new')

      - if feature?(:housing)
        = link_to(t('views.landing.callout'), housings_path, method: :post, class: 'btn btn-new')

      - if feature?(:healthcaring)
        = link_to(t('views.landing.callout'), healthcarings_path, method: :post, class: 'btn btn-new')

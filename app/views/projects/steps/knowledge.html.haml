-# coding: utf-8

.col-md-6.col-md-offset-3
  %legend Quelle phrase décrit le mieux mon projet ?

  = simple_form_for(@project, url: wizard_path, method: :put, wrapper: :vertical_form) do |f|
    = f.error_notification

    .form-inputs
      = f.input_field :knowledge, collection: KNOWLEDGE_QUESTIONS,
                                  label_method: :to_s,
                                  value_method: :to_s,
                                  as: :radio_buttons

    .form-actions
      = f.button :submit, 'Continuer', class: 'btn btn-primary'

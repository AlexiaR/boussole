-# coding: utf-8

.l-container-narrow
  .l-content
    %section.profile-form
      %h1.profile-form-header= t('.heading')
      %hr

      = simple_form_for([:agents, @measure], wrapper: :vertical_form) do |f|
        = f.error_notification

        = f.association(:public_service)
        = f.input(:title)
        = f.input(:description)
        = f.input(:url)
        = f.association(:social_rights)

        = f.button(:submit, t('.update'), class: 'button-warning', role: 'button')
        = link_to(t('.show'), agents_measure_path(@measure), class: 'button-info', role: 'link')
        = link_to(t('.back'), agents_measures_path, class: 'button-default', role: 'link')


-# coding: utf-8

.l-content-narrow
  %article.profile
    %header.profile-title
      %h1= @public_service.title

    %hr

    .profile-details
      %dl
        .profile-definition
          %dt= t(:description, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.description

        .profile-definition
          %dt= t(:postal_address, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.postal_address

        .profile-definition
          %dt= t(:email, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.email

        .profile-definition
          %dt= t(:phone, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.phone

        .profile-definition
          %dt= t(:url, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.url

        .profile-definition
          %dt= t(:social_rights, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.social_rights.pluck(:name).join(', ')

        .profile-definition
          %dt= t(:updated_at, scope: 'activerecord.attributes.public_service')
          %dd= @public_service.updated_at

    .profile-actions
      = link_to(t('.edit'), edit_agents_public_service_path(@public_service), class: 'btn btn-edit')
      = link_to(t('.back'), agents_public_services_path, class: 'btn btn-cancel')
